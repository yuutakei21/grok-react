# Stage 1: Build ứng dụng React
FROM node:18-alpine AS builder

WORKDIR /app
COPY package.json ./
RUN npm install --production=false

COPY . .

ARG VERSION=$(node -p "require('./package.json').version")
ARG BUILD_TIME=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
ENV REACT_APP_VERSION=$VERSION
ENV REACT_APP_BUILD_TIME=$BUILD_TIME

RUN npm run build

# Stage 2: Serve file tĩnh bằng Nginx
FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
# Custom Nginx: Nếu mày cần cấu hình thêm (ví dụ: rewrite URL cho SPA), tạo file nginx.conf:
# COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]